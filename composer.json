{
  "name": "hawk/hawk",
  "description": "Micro api is a framework for building REST application",
  "license": "MIT",
  "keywords": [
    "framework",
    "hawk",
    "api",
    "rest",
    "restful",
    "micro",
    "web",
    "mobile",
    "application"
  ],
  "homepage": "https://github.com/hawkphp",
  "authors": [
    {
      "name": "Ruslan Baimurzaev",
      "email": "baimurzaev@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.2",
    "hawkphp/psr7": "^1",
    "league/route": "^4.3"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "~3.5",
    "phpstan/phpstan": "~0.11",
    "phpunit/phpunit": "^7"
  },
  "autoload": {
    "psr-4": {
      "Hawk\\": "src/",
      "Hawk\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": [
      "@phpunit",
      "@phpcs",
      "@phpstan"
    ],
    "phpunit": "phpunit",
    "phpcs": "phpcs",
    "phpstan": "phpstan analyse src"
  }
}
